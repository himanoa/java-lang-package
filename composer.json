{
    "name": "php-java/java-lang-package",
    "description": "java.lang.* package",
    "type": "library",
    "license": "MIT",
    "version": "0.0.1-dev",
    "authors": [
        {
            "name": "memory"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-zip": "*",
        "monolog/monolog": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "PHPJava\\Imitation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPJava\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4",
        "friendsofphp/php-cs-fixer": "^2.14",
        "php-java/php-java": "dev-master"
    },
    "scripts": {
        "tests": "phpunit tests --stop-on-failure && phpcs --standard=phpcs.xml src"
    }
}
